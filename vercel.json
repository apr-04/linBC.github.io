{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "TENANT_ID": "@tenant_id",
    "CLIENT_ID": "@client_id",
    "CLIENT_SECRET": "@client_secret",
    "DRIVE_ID": "@drive_id"
  }
}